{
  "name": "api-lambda-crud-dynamodb",
  "version": "1.0.0",
  "description": "Running an API Gateway with four Lambdas to do CRUD operations on DynamoDB",
  "scripts": {
    "postinstall": "(cd lambdas && npm install);",
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "test": "jest"
  },
  "author": {
    "name": "Luis Alfonso Preciado <luisapreciado99@gmail.com>"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "*",
    "@types/uuid": "^8.3.4",
    "aws-cdk": "*",
    "esbuild": "*",
    "jest": "^26.4.2",
    "jest-junit": "^13.0.0",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "typescript": "~4.6.0"
  },
  "dependencies": {
    "aws-cdk-lib": "2.8.0",
    "aws-sdk": "*",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.16"
  },
  "jest": {
    "preset": "ts-jest",
